APP_NAME="WA CRM Astra"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=wa_crm_astra
DB_USERNAME=root
DB_PASSWORD=

# Redis for Queue & Cache
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# WAHA Configuration
WAHA_BASE_URL=http://localhost:3000
WAHA_API_KEY=your-secure-api-key
WAHA_DEFAULT_SESSION=default
WAHA_RATE_LIMIT_PER_MINUTE=30
WAHA_RATE_LIMIT_PER_HOUR=500
WAHA_MESSAGE_DELAY=2
WAHA_WEBHOOK_SECRET=your-webhook-secret

# Filesystem
FILESYSTEM_DISK=local

# Mail (optional)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"
